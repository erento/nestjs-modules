{
  "compilerOptions": {
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "allowJs": false,
    "pretty": true
  }
}
